@using RunGroupWebApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Login to your account</h4>
        </p>
        @if(TempData["Error"] != null) //show error messages
        {
            <div class="col-md-12 alert alert-danger">
                <span> @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login"> @*//this mean post*@
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                    <label asp-for="EmailAddress">EmailAddress</label>
                    <input asp-for="EmailAddress" class="form-control" placeholder="Title">
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Password">Description</label>
                    <input asp-for="Password" class="form-control" placeholder="Description">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <input value="Log in" class="btn btn-outline-success float right" type="submit">
                    <a asp-controller="Club" class="btn btn-outline-secondary text-danger" asp-action="Index">Cancel</a>
                  </div>
                </form>
            </div>
        </div>
    </div>
</div>
